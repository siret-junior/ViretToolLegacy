<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:ViretTool.BasicClient.Controls">

    <Style TargetType="{x:Type local:Paging}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:Paging}">
                    <StackPanel Orientation="Horizontal">
                        <Button x:Name="PART_Right" Content="&lt;"  Padding="3,0,3,0" />
                        <TextBox x:Name="PART_CurrentPage"
                                 Width="30"
                                 TextAlignment="Center"
                                 Text="{Binding Path=CurrentPage, RelativeSource={RelativeSource Mode=TemplatedParent}, Mode=OneTime}" />
                        <Button x:Name="PART_Left" Content="&gt;" Padding="3,0,3,0" />
                    </StackPanel>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
